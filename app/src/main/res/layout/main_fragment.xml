<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infosLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="@dimen/default_50dp"
            android:layout_height="@dimen/default_50dp"
            android:layout_marginStart="@dimen/default_12dp"
            android:src="@drawable/gokdigital_png"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textSize="@dimen/default_16sp"
            android:textColor="@color/black"
            android:text="@string/hello"
            app:layout_constraintStart_toEndOf="@+id/imageLogo"
            app:layout_constraintTop_toTopOf="@+id/imageLogo"
            app:layout_constraintBottom_toBottomOf="@+id/imageLogo" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSpotlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageLogo"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewDigioCashTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_22dp"
            android:layout_marginStart="@dimen/default_12dp"
            android:textSize="@dimen/default_22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="digio Cash"
            app:layout_constraintTop_toBottomOf="@+id/recyclerSpotlight"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDigioCash"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_130dp"
            android:layout_marginTop="@dimen/default_12dp"
            android:layout_marginStart="@dimen/default_12dp"
            android:layout_marginEnd="@dimen/default_12dp"
            android:elevation="@dimen/default_10dp"
            app:cardElevation="@dimen/default_10dp"
            app:cardCornerRadius="@dimen/default_10dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDigioCashTitle"
            app:layout_constraintStart_toStartOf="parent" >

            <ImageView
                android:id="@+id/imageViewDigioCash"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewProductsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_22dp"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/default_22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/products"
            app:layout_constraintTop_toBottomOf="@+id/cardViewDigioCash"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_12dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewProductsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>